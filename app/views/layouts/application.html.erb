<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to "Home", root_url, class: "navbar-brand nav-link"  %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            
            <%= link_to "Posts", posts_path, class: "nav-link"   %>
            <%= link_to "Categories", categories_path, class: "nav-link"   %>
            <%= link_to "Tags", tags_path, class: "nav-link"   %>
            <% if user_signed_in? %>
            <%=link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link"   %>
          <% else%>
            <%= link_to "Log In", new_user_session_path, class: "nav-link"  %>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link"  %>
          <% end %>

          </div>
        </div>
      </nav>
     
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
     
      <div class="row">
        <div class="col-md-9">
          <%= yield %>
        </div>
        <div class="col-md-3">
          <% if controller.controller_name == "public" %>
            <h6>CATEGORIES</h6>
            <%= render 'layouts/categories', :categories => @categories%>
            <h6>TAGS</h6>
            <%= render 'layouts/tagcloud',  :tags => @tags %>
          <% end %>
       </div>
      </div>
    </div>
  </body>
</html>
