<div class="container">
  <div class="row"> 
    <div class="col-sm-10">
      <div class="row">
       <% @posts.each do |post|  %>
        <%= render partial: 'post', locals: {post: post}  %>
       <% end%>
      </div>
   </div>
  <div class="col-sm-2">
    <h6>Categories</h6>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item"><%= category.name%></li>
      <% end%>
    </ul>
    
  </div>
</div>
</div>