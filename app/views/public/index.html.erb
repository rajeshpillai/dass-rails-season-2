<div class="container">
  <div class="row"> 
    <div class="col-sm-10">
      <div class="row">
        <% @posts.each do |post|  %>
          <%= render partial: 'post', locals: {post: post}  %>
        <% end%>
      </div>
   </div>
  <div class="col-sm-2">
    <h6>Categories</h6>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item">
          <%= link_to category.name, category_search_path(category.name.downcase) %>
        </li>
      <% end%>
    </ul>
  </div>
  </div>
  <%= paginate @posts %>
</div>
