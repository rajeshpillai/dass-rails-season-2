<p id="notice"><%= notice %></p>

<% if @post.featured_image.attached? %>
<%= image_tag @post.featured_image %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Published:</strong>
  <%= @post.published %>
</p>

<div class="row mt-3">
  <div class="col-sm-12">
    <h2>Conversations</h2>
  </div>
</div>

<div class="row mt-3">
  <div class="col-sm-12">
    <h2>Start Conversation</h2>
    <%= form_with url: comments_url(@post), local: true, scope: "comment" do |form| %>
      <%= form.hidden_field :post_id, value: @post.id %>
      
      <div class="form-group">
        <label>What do you want to say?</label>
        <%= form.text_area :body, class: "form-control" %>
      </div>
      <div>
        <%= form.submit %>
      <div>
    <% end %>
  </div>
</div>

<% @post.comments.order("created_at desc").each do |comment|%>
  <div class="container">
    <div class="row card mb-3 p-2">
      <div class="col-sm-12">
        <div ><%= comment.body %> </div>
        <footer class="text-muted mt-2">
          commented by <%= comment.user.username %> about <%= time_ago_in_words(comment.created_at) %> ago.
        </footer>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'Back', root_url %>
